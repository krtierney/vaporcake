<h1>Users</h1>
<div class="detail">
  <% @users.each do |user| %>

    <ul>
      <li>
        <%= link_to user.username, user %>       
        <% if user.is_admin %>
          (Admin)
        <% end %>
        <%= link_to '[delete]', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>

  <% end %>
  </ul>
</div>